<?xml version="1.0" encoding="utf-8"?>

<!-- ========== BACKGROUND: Custom Toast ==========
     Rounded paper-style background for feedback messages.
-->

<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <solid android:color="@color/toast_bg" />

    <corners android:radius="@dimen/toast_corner_radius" />

    <padding
            android:left="@dimen/toast_padding_horizontal"
            android:top="@dimen/toast_padding_vertical"
            android:right="@dimen/toast_padding_horizontal"
            android:bottom="@dimen/toast_padding_vertical" />
</shape>