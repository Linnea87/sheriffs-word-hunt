<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/btn_fill" />
            <corners android:radius="@dimen/btn_corner_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                    android:width="@dimen/btn_stroke_width"
                    android:color="@color/btn_stroke" />
            <corners android:radius="@dimen/btn_corner_radius" />
            <padding
                    android:left="12dp"
                    android:right="12dp"
                    android:top="8dp"
                    android:bottom="8dp" />
        </shape>
    </item>

</layer-list>