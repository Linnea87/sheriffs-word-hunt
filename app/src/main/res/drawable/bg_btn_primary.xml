<?xml version="1.0" encoding="utf-8"?>

<!-- ========== DRAWABLE: Primary Button Background ==========
     Draws the button fill color, rounded corners, stroke outline
     and padding defined in dimens for consistent UI spacing.
-->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/btn_fill" />
            <corners android:radius="@dimen/btn_corner_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                    android:width="@dimen/btn_stroke_width"
                    android:color="@color/btn_stroke" />
            <corners android:radius="@dimen/btn_corner_radius" />
            <padding
                    android:left="@dimen/btn_bg_padding_horizontal"
                    android:right="@dimen/btn_bg_padding_horizontal"
                    android:top="@dimen/btn_bg_padding_vertical"
                    android:bottom="@dimen/btn_bg_padding_vertical" />
        </shape>
    </item>

</layer-list>