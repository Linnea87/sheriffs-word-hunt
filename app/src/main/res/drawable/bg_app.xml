<?xml version="1.0" encoding="utf-8"?>

<!-- ========== BACKGROUND: APP MAIN BACKGROUND ================
     Combines the primary dark color with a faded paper texture
     positioned below the hero section. -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/bg_primary" />

    <item android:top="@dimen/hero_height">
        <bitmap
                android:src="@drawable/bg_paper_texture"
                android:alpha="0.27"
                android:gravity="fill" />
    </item>

</layer-list>