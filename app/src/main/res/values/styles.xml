<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========== HERO TEXT ========== -->
    <style name="Text_HeroTitle">
        <item name="android:fontFamily">@font/rye_regular</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_hero_title</item>
    </style>

    <style name="Text_HeroSub">
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_hero_sub</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- ========== BUTTONS ========== -->
    <style name="Button_Primary">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>

        <item name="android:background">@drawable/bg_btn_primary</item>

        <!-- Text + ikon -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:drawableTint">@color/text_primary</item>
        <item name="android:drawableTintMode">src_in</item>

        <item name="android:drawableStart">@drawable/ic_stars</item>
        <item name="android:drawablePadding">@dimen/btn_icon_padding</item>

        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingStart">@dimen/btn_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/btn_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/btn_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/btn_padding_vertical</item>

        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- ========== SMALL PRIMARY BUTTON (Back button) ========== -->
    <style name="Button_Primary_Small" parent="Button_Primary">
        <item name="android:layout_width">@dimen/back_btn_width</item>
        <item name="android:layout_height">@dimen/back_btn_height</item>
        <item name="android:textSize">@dimen/back_btn_text_size</item>
    </style>



</resources>